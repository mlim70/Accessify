{
  "manifest_version": 3,
  "name": "All in one accessibility",
  "version": "1.0",
  "description": "Changes the font of web pages to your preferred Google Web Font",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting",
    "tabs",
    "tts"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "features/font-changer.js", "utils/translator.js"]
    }
  ],
"content_security_policy": {
  "extension_pages": "script-src 'self'; object-src 'self'; media-src 'self' blob:;"
},
"background": {
  "service_worker": "background.js"
},
"action": {
  "default_popup": "ui/popup.html",
  "default_icon": "icon.png"
},
"web_accessible_resources": [
      {
        "resources": ["fonts/OpenDyslexic-Regular.otf", "fonts/OpenDyslexic-Bold.otf"],
        "matches": ["<all_urls>"]
      }
    ]


  
}
